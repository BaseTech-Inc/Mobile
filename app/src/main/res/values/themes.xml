<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TupaMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary900</item>
        <item name="colorPrimaryVariant">@color/Primary700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/LightBackground</item>
        <item name="colorSecondaryVariant">@color/LightSurface</item>
        <item name="colorOnSecondary">@color/LightOnSurfaceHighEmphasis</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="OnSurfaceHighEmphasis">@color/LightOnSurfaceHighEmphasis</item>
        <item name="OnSurfaceMediumEmphasis">@color/LightOnSurfaceMediumEmphasis</item>
        <item name="OnSurfaceDisabled">@color/LightOnSurfaceDisabled</item>
        <item name="SurfaceOutline">@color/LightOutline</item>
        <item name="Surface">@color/LightSurface</item>
        <item name="Error">@color/Error</item>
        <item name="ToolbarBackground">@color/WhiteMapBackground</item>
    </style>

    <style name="Theme.DimmedTupaMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary900</item>
        <item name="colorPrimaryVariant">@color/Primary500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DimmedBackground</item>
        <item name="colorSecondaryVariant">@color/DimmedSurface</item>
        <item name="colorOnSecondary">@color/DimmedOnSurfaceHighEmphasis</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="OnSurfaceHighEmphasis">@color/DimmedOnSurfaceHighEmphasis</item>
        <item name="OnSurfaceMediumEmphasis">@color/DimmedOnSurfaceMediumEmphasis</item>
        <item name="OnSurfaceDisabled">@color/DimmedOnSurfaceDisabled</item>
        <item name="SurfaceOutline">@color/DimmedOutline</item>
        <item name="Surface">@color/DimmedSurface</item>
        <item name="Error">@color/Error</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="background">?attr/Surface</item>
        <item name="actionMenuTextColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTextApperance" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:background"> @color/LightOnSurfaceHighEmphasis </item>
    </style>

    <style name="Theme.MaterialComponents.DayNight.NoActionBar.Popup">
        <item name="android:windowIsTranslucent"> true </item>
        <item name="android:windowCloseOnTouchOutside"> true </item>
    </style>
</resources>