<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp"
    android:id="@+id/emptyMarkersLayout">

    <ImageView
        android:id="@+id/icoHumidity"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/rainy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/open_sans_regular"
        android:paddingHorizontal="24dp"
        android:text="Parece que você ainda não tem marcadores salvos"
        android:textAlignment="center"
        android:textColor="?attr/OnSurfaceMediumEmphasis"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icoHumidity" />

    <TextView
        android:id="@+id/txtMinTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Adicionar Marcadores"
        android:layout_marginVertical="24dp"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHumidity" />

</androidx.constraintlayout.widget.ConstraintLayout>