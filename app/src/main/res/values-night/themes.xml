<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TupaMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary900</item>
        <item name="colorPrimaryVariant">@color/Primary500</item>
        <item name="colorOnPrimary">@color/DarkOnSurfaceHighEmphasis</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DarkBackground</item>
        <item name="colorSecondaryVariant">@color/DarkSurface</item>
        <item name="colorOnSecondary">@color/DarkOnSurfaceHighEmphasis</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="OnSurfaceHighEmphasis">@color/DarkOnSurfaceHighEmphasis</item>
        <item name="OnSurfaceMediumEmphasis">@color/DarkOnSurfaceMediumEmphasis</item>
        <item name="OnSurfaceDisabled">@color/DarkOnSurfaceDisabled</item>
        <item name="SurfaceOutline">@color/DarkOutline</item>
        <item name="Surface">@color/DarkSurface</item>
        <item name="Error">@color/Error</item>
        <item name="ToolbarBackground">@color/DarkMapBackground</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16dp</item>
        <item name="background">?attr/Surface</item>
        <item name="android:textColorSecondary">?attr/OnSurfaceMediumEmphasis</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.MaterialComponents.DayNight.NoActionBar.Popup">
        <item name="android:windowIsTranslucent"> true </item>
        <item name="android:windowCloseOnTouchOutside"> true </item>
    </style>
</resources>